{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.spec.{js,ts}"],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["test/**/*.js"],
      "rules": {
        "@typescript-eslint/no-empty-function": "warn"
      }
    },
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
