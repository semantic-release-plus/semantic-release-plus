{
  "name": "semantic-release-plus",
  "description": "Fork of Automated semver compliant package publishing to enable additional features",
  "version": "0.0.0-development",
  "author": "Stephan BÃ¶nnemann <stephan@boennemann.me> (http://boennemann.me)",
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "timeout": "2m"
  },
  "bin": {
    "semantic-release-plus": "src/bin/semantic-release-plus.js",
    "srp": "src/bin/semantic-release-plus.js"
  },
  "bugs": {
    "url": "https://github.com/semantic-release-plus/semantic-release-plus/issues"
  },
  "contributors": [
    "Justin Dietz (https://twitter.com/@skigeek)"
  ],
  "dependencies": {
    "@semantic-release/commit-analyzer": "^9.0.0",
    "@semantic-release/error": "^3.0.0",
    "@semantic-release/github": "^8.0.0",
    "@semantic-release/npm": "^9.0.0",
    "@semantic-release/release-notes-generator": "^10.0.0",
    "@semantic-release-plus/core": "alpha"
  },
  "peerDependencies": {
    "tslib": "^2.0.0"
  },
  "engines": {
    "node": ">=16 || ^14.17"
  },
  "homepage": "https://github.com/semantic-release-plus/semantic-release-plus/packages/srp/#readme",
  "keywords": [
    "author",
    "automation",
    "changelog",
    "module",
    "package",
    "publish",
    "release",
    "semver",
    "version"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/semantic-release-plus/semantic-release-plus.git",
    "directory": "packages/srp"
  },
  "scripts": {
    "codecov": "codecov -f coverage/coverage-final.json",
    "release": "node ../../dist/packages/srp/src/bin/semantic-release-plus.js --debug",
    "test": "nyc ava -v 'test/**/!(integration).test.js'",
    "test:ci": "nyc ava -v 'test/**/!(integration).test.js'",
    "e2e": "ava -v 'test/integration.test.js'"
  }
}
